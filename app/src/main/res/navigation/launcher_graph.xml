<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher_graph"
    app:startDestination="@id/launcher">


    <action
        android:id="@+id/action_to_main_activity"
        app:destination="@id/main_activity" />
    <activity
        android:id="@+id/main_activity"
        android:name="com.opentrivia.app.activity.MainActivity"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/launcher"
        android:name="com.opentrivia.app.fragment.LauncherFragment"
        tools:layout="@layout/fragment_launcher" />
</navigation>