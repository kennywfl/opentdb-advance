<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/lbl_total_count"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingStart="@dimen/padding_16dp"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_16dp"
                android:paddingBottom="@dimen/padding_8dp"
                android:layout_marginEnd="@dimen/padding_8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/total"/>

        <TextView
            android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/colorAccent"
                android:layout_marginEnd="@dimen/padding_8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/lbl_total_count"
                app:layout_constraintTop_toBottomOf="@id/lbl_total_count"
                app:layout_constraintBottom_toBottomOf="parent"
                app:autoSizeTextType="uniform"
                tools:text="@tools:sample/us_zipcodes"/>

        <TextView
                android:id="@+id/tv_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_16dp"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_16dp"
                android:paddingBottom="@dimen/padding_8dp"
                android:textAppearance="?android:textAppearanceListItem"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/lbl_total_count"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/lorem"/>

        <TextView
                android:id="@+id/tv_easy_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="@dimen/padding_16dp"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_16dp"
                android:paddingBottom="@dimen/padding_8dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_question"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                tools:text="@tools:sample/us_zipcodes"/>

        <TextView
                android:id="@+id/tv_medium_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_8dp"
                android:paddingStart="@dimen/padding_16dp"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_16dp"
                android:paddingBottom="@dimen/padding_8dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_question"
                app:layout_constraintTop_toBottomOf="@id/tv_easy_count"
                tools:text="@tools:sample/us_zipcodes"/>

        <TextView
            android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_8dp"
                android:paddingStart="@dimen/padding_16dp"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_16dp"
                android:paddingBottom="@dimen/padding_8dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_question"
                app:layout_constraintTop_toBottomOf="@id/tv_medium_count"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="@tools:sample/us_zipcodes"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>